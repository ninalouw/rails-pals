%section#user-account
  .container-fluid.px-md-5
    .row
      .col-12.col-lg-6
        #welcome-user-row
          %h1
            Welcome
            = "#{current_user.email}!"
            %h6 Here are your latest messages
    .row.dashboard-duo
      .col-lg-6.col-md-6.col-sm-6.col-xs-6.card-mobile
        .card
          %h3{class:'card-header'} Your Messages
          .card-block.row.d-flex.justify-content-center.align-items-center
            .card.w-10.col-lg-5.col-md-5.col-sm-5.col-xs-12
              %h4{class:'card-title'} The title
              %p{class:'lead'} From: Message sender
              %p{class:'card-text'} The body of your message.The body of your message.
              %button{class: 'btn btn-secondary'} Reply
            .card.w-10.col-lg-5.col-md-5.col-sm-5.col-xs-12
              %h4{class:'card-title'} The title
              %p{class:'lead'} From: Message sender
              %p{class:'card-text'} The body of your message.The body of your message.
              %button{class: 'btn btn-secondary'} Reply
      .col-lg-6.col-md-6.col-sm-6.col-xs-6.card-mobile
        .card
          %h3{class:'card-header'} Recently Added Dogs
          .card-block.row.d-flex.justify-content-center.align-items-center
          - if @user.dogs.any?
            - @user.dogs.each do |d|
              .card.col-lg-6.col-md-6.col-sm-6.col-xs-12
                = image_tag d.image.url(:large), :class => 'card-img-top img-circle img-fluid', :alt => 'card image'
                .card-body
                  %h4{class:'card-title'}= d.name
                  %span
                    %p{class: 'text-muted'}= d.breed
                    %p{class: 'text-muted'}= d.size.name
                  %span
                    %p{class: 'text-muted'}= d.age
                    %p{class: 'text-muted'}= d.availability
                  %span
                    %p{class: 'text-muted'}= d.suburb
                    %p{class: 'text-muted'}= d.postal_code
                  %p{class:'lead'}= d.description
                  = link_to 'View Dog', dog_path(d), class: 'btn btn-secondary'