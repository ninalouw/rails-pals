<div class ="container margin">
    <div class = "row">
      <div class = "col-md-12">
        <h2><%= @profile.screen_name %></h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 gallery-body">
        <%= link_to image_tag(@profile.image.url(:large)), @profile.image.url %>
      </div>
    </div>
      <div class="row">
        <div class="col-md-12">
          <h4>
            <%= @profile.description %>
          </h4>
        </div>
      </div>

    <div class = "row">
      <div class = "col-md-12 gallery-body">
        <%= @profile.occupation %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 gallery-body">
        <%= @profile.suburb %>
      </div>
    </div>
      <div class="row">
        <div class="col-md-12 gallery-body">
          <%= @profile.postal_code %>
        </div>
      </div>
    <div class = "row">
      <div class = "col-md-12">
        <%= link_to 'Edit', edit_profile_path(@profile),class: 'btn btn-info' %>
        <%= link_to 'Delete', profile_path(@profile), method: :delete,
                                              data:{confirm: 'Are you sure you want to delete?'},class: 'btn btn-danger'  %>
     </div>
    </div>
</div>